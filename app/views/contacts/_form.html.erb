<%= form_with(model: contact) do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
        <% contact.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>Ola</p>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :kind_id, Contact.human_attribute_name("kind") %>
    <%= collection_select(:contact, :kind_id, @kinds_option_select, :id, :description) %>
  </div>

  <%= form.fields_for :address do |address_fields| %>    
    <div class="field">
      <%= address_fields.label :street %>
      <%= address_fields.text_field :street %>      
    </div>

    <div class="field">
      <%= address_fields.label :city %>
      <%= address_fields.text_field :city %>
    </div>

    <div class="field">
      <%= address_fields.label :state %>
      <%= address_fields.text_field :state %>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :rmk %>
    <%= form.text_area :rmk %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
